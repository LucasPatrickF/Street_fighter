<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idpersonagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5FA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#161B87"
        android:gravity="center_horizontal"
        android:shadowRadius="5"
        android:text="@string/lista_personagens"
        android:textAllCaps="true"
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="20sp"
        app:layout_constraintTop_toTopOf="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        

    <include layout="@layout/activity_card_viewlista"

    <include layout="@layout/modelolista"

    <include layout="@layout/dhalsim"

    <include layout="@layout/chunli"

    <include layout="@layout/akuma"
</LinearLayout>
</LinearLayout>